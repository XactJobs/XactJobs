@page
@model XactJobs.UI.Pages.Scheduled.IndexModel
@{
    ViewData["Title"] = "Scheduled Jobs";
}

<div class="row mb-4">
    <div class="col">
        <h1><i class="bi bi-clock me-2"></i>Scheduled Jobs</h1>
        <p class="text-muted">Jobs waiting to be processed</p>
    </div>
    <div class="col-auto">
        <button class="btn btn-outline-secondary"
                onclick="location.reload()">
            <i class="bi bi-arrow-clockwise"></i> Refresh
        </button>
    </div>
</div>

@if (Model.Jobs.Items.Count == 0)
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>No scheduled jobs found.
    </div>
}
else
{
    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Type</th>
                        <th>Method</th>
                        <th>Queue</th>
                        <th>Scheduled At</th>
                        <th>Status</th>
                        <th>Errors</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var job in Model.Jobs.Items)
                    {
                        <tr id="job-row-@job.Id">
                            <td><code>@job.Id</code></td>
                            <td title="@job.TypeName">@job.DisplayTypeName</td>
                            <td><code>@job.MethodName</code></td>
                            <td><span class="badge bg-secondary">@job.Queue</span></td>
                            <td>@job.ScheduledAt.ToString("g")</td>
                            <td>
                                @if (job.IsProcessing)
                                {
                                    <span class="badge bg-warning text-dark">
                                        <i class="bi bi-play-circle"></i> Processing
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-info">
                                        <i class="bi bi-clock"></i> Pending
                                    </span>
                                }
                            </td>
                            <td>
                                @if (job.ErrorCount > 0)
                                {
                                    <span class="badge bg-danger">@job.ErrorCount</span>
                                }
                                else
                                {
                                    <span class="text-muted">0</span>
                                }
                            </td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary me-1"
                                        hx-post="@Model.Options.ApiBasePath/jobs/@job.Id/requeue"
                                        hx-swap="none"
                                        hx-on::after-request="if(event.detail.successful) location.reload()"
                                        title="Requeue">
                                    <i class="bi bi-arrow-counterclockwise"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger"
                                        hx-delete="@Model.Options.ApiBasePath/jobs/@job.Id"
                                        hx-confirm="Delete this job?"
                                        hx-target="#job-row-@job.Id"
                                        hx-swap="outerHTML swap:0.5s"
                                        title="Delete">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Pagination -->
    @await Html.PartialAsync("Partials/_Pagination", Model.Jobs)
}
