@page
@model XactJobs.UI.Pages.Failed.IndexModel
@{
    ViewData["Title"] = "Failed Jobs";
}

<div class="row mb-4">
    <div class="col">
        <h1><i class="bi bi-x-circle me-2 text-danger"></i>Failed Jobs</h1>
        <p class="text-muted">Jobs that failed to execute</p>
    </div>
    <div class="col-auto">
        <button class="btn btn-outline-secondary"
                onclick="location.reload()">
            <i class="bi bi-arrow-clockwise"></i> Refresh
        </button>
    </div>
</div>

@if (Model.Jobs.Items.Count == 0)
{
    <div class="alert alert-success">
        <i class="bi bi-check-circle me-2"></i>No failed jobs. Everything is running smoothly!
    </div>
}
else
{
    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Type</th>
                        <th>Method</th>
                        <th>Queue</th>
                        <th>Failed At</th>
                        <th>Error</th>
                        <th>Retries</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var job in Model.Jobs.Items)
                    {
                        <tr id="history-row-@job.Id">
                            <td><code>@job.Id</code></td>
                            <td title="@job.TypeName">@job.DisplayTypeName</td>
                            <td><code>@job.MethodName</code></td>
                            <td><span class="badge bg-secondary">@job.Queue</span></td>
                            <td>@job.ProcessedAt.ToString("g")</td>
                            <td>
                                @if (!string.IsNullOrEmpty(job.ErrorMessage))
                                {
                                    <button class="btn btn-sm btn-link text-danger p-0"
                                            data-bs-toggle="modal"
                                            data-bs-target="#errorModal-@job.Id"
                                            title="View error details">
                                        <i class="bi bi-exclamation-triangle me-1"></i>
                                        @(job.ErrorMessage.Length > 50 ? job.ErrorMessage[..50] + "..." : job.ErrorMessage)
                                    </button>

                                    <!-- Error Modal -->
                                    <div class="modal fade" id="errorModal-@job.Id" tabindex="-1">
                                        <div class="modal-dialog modal-lg">
                                            <div class="modal-content">
                                                <div class="modal-header bg-danger text-white">
                                                    <h5 class="modal-title">
                                                        <i class="bi bi-exclamation-triangle me-2"></i>Error Details - Job #@job.Id
                                                    </h5>
                                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <h6>Error Message</h6>
                                                    <pre class="bg-light p-3 rounded">@job.ErrorMessage</pre>
                                                    @if (!string.IsNullOrEmpty(job.ErrorStackTrace))
                                                    {
                                                        <h6 class="mt-3">Stack Trace</h6>
                                                        <pre class="bg-dark text-light p-3 rounded small" style="max-height: 400px; overflow-y: auto;">@job.ErrorStackTrace</pre>
                                                    }
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">No error message</span>
                                }
                            </td>
                            <td><span class="badge bg-danger">@job.ErrorCount</span></td>
                            <td>
                                <button class="btn btn-sm btn-outline-warning"
                                        hx-post="@Model.Options.ApiBasePath/history/@job.Id/retry"
                                        hx-swap="none"
                                        hx-on::after-request="if(event.detail.successful) { alert('Job requeued successfully!'); location.reload(); }"
                                        title="Retry this job">
                                    <i class="bi bi-arrow-counterclockwise"></i> Retry
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @await Html.PartialAsync("Partials/_Pagination", Model.Jobs)
}
