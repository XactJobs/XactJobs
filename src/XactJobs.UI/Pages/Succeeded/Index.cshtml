@page "/xactjobs/succeeded"
@model XactJobs.UI.Pages.Succeeded.IndexModel
@{
    ViewData["Title"] = "Succeeded Jobs";
}

<div class="row mb-4">
    <div class="col">
        <h1><i class="bi bi-check-circle me-2 text-success"></i>Succeeded Jobs</h1>
        <p class="text-muted">Successfully completed jobs</p>
    </div>
    <div class="col-auto">
        <button class="btn btn-outline-secondary"
                onclick="location.reload()">
            <i class="bi bi-arrow-clockwise"></i> Refresh
        </button>
    </div>
</div>

@if (Model.Jobs.Items.Count == 0)
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>No succeeded jobs found.
    </div>
}
else
{
    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Type</th>
                        <th>Method</th>
                        <th>Queue</th>
                        <th>Processed At</th>
                        <th>Duration</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var job in Model.Jobs.Items)
                    {
                        <tr>
                            <td><code>@job.Id</code></td>
                            <td title="@job.TypeName">@job.DisplayTypeName</td>
                            <td><code>@job.MethodName</code></td>
                            <td><span class="badge bg-secondary">@job.Queue</span></td>
                            <td>@job.ProcessedAt.ToString("g")</td>
                            <td>@FormatDuration(job.Duration)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @await Html.PartialAsync("Partials/_Pagination", Model.Jobs)
}

@functions {
    string FormatDuration(TimeSpan duration)
    {
        if (duration.TotalMilliseconds < 1000)
            return $"{duration.TotalMilliseconds:F0}ms";
        if (duration.TotalSeconds < 60)
            return $"{duration.TotalSeconds:F1}s";
        if (duration.TotalMinutes < 60)
            return $"{duration.TotalMinutes:F1}m";
        return $"{duration.TotalHours:F1}h";
    }
}
