@page "/xactjobs/periodic"
@model XactJobs.UI.Pages.Periodic.IndexModel
@{
    ViewData["Title"] = "Periodic Jobs";
}

<div class="row mb-4">
    <div class="col">
        <h1><i class="bi bi-arrow-repeat me-2"></i>Periodic Jobs</h1>
        <p class="text-muted">Recurring job definitions</p>
    </div>
    <div class="col-auto">
        <button class="btn btn-outline-secondary"
                onclick="location.reload()">
            <i class="bi bi-arrow-clockwise"></i> Refresh
        </button>
    </div>
</div>

@if (Model.Jobs.Items.Count == 0)
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>No periodic jobs configured.
    </div>
}
else
{
    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Type</th>
                        <th>Method</th>
                        <th>Queue</th>
                        <th>Cron Expression</th>
                        <th>Status</th>
                        <th>Version</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var job in Model.Jobs.Items)
                    {
                        <tr id="periodic-row-@job.Id.Replace(".", "-")">
                            <td><code>@job.Id</code></td>
                            <td title="@job.TypeName">@job.DisplayTypeName</td>
                            <td><code>@job.MethodName</code></td>
                            <td><span class="badge bg-secondary">@job.Queue</span></td>
                            <td><code>@job.CronExpression</code></td>
                            <td>
                                @if (job.IsActive)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> Active
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-pause-circle"></i> Inactive
                                    </span>
                                }
                            </td>
                            <td><span class="badge bg-info">v@job.Version</span></td>
                            <td>
                                @if (job.IsActive)
                                {
                                    <button class="btn btn-sm btn-outline-warning me-1"
                                            hx-post="@Model.Options.ApiBasePath/periodic/@job.Id/toggle?isActive=false"
                                            hx-swap="none"
                                            hx-on::after-request="if(event.detail.successful) location.reload()"
                                            title="Pause">
                                        <i class="bi bi-pause"></i>
                                    </button>
                                }
                                else
                                {
                                    <button class="btn btn-sm btn-outline-success me-1"
                                            hx-post="@Model.Options.ApiBasePath/periodic/@job.Id/toggle?isActive=true"
                                            hx-swap="none"
                                            hx-on::after-request="if(event.detail.successful) location.reload()"
                                            title="Activate">
                                        <i class="bi bi-play"></i>
                                    </button>
                                }
                                <button class="btn btn-sm btn-outline-primary me-1"
                                        hx-post="@Model.Options.ApiBasePath/periodic/@job.Id/trigger"
                                        hx-swap="none"
                                        hx-on::after-request="if(event.detail.successful) { alert('Job triggered! Check scheduled jobs.'); }"
                                        title="Trigger Now">
                                    <i class="bi bi-lightning"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger"
                                        hx-delete="@Model.Options.ApiBasePath/periodic/@job.Id"
                                        hx-confirm="Delete this periodic job definition?"
                                        hx-target="#periodic-row-@job.Id.Replace(".", "-")"
                                        hx-swap="outerHTML swap:0.5s"
                                        title="Delete">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @await Html.PartialAsync("Partials/_Pagination", Model.Jobs)
}
