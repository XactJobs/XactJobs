@inject XactJobsUIOptions Options
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - @Options.DashboardTitle</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet" crossorigin="anonymous">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
          rel="stylesheet">

    <!-- Custom styles -->
    <link href="~/_content/XactJobs.UI/css/xactjobs.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Options.BasePath">
                <i class="bi bi-gear-wide-connected me-2"></i>@Options.DashboardTitle
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Options.BasePath"><i class="bi bi-speedometer2 me-1"></i>Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Options.BasePath/scheduled"><i class="bi bi-clock me-1"></i>Scheduled</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Options.BasePath/succeeded"><i class="bi bi-check-circle me-1"></i>Succeeded</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Options.BasePath/failed"><i class="bi bi-x-circle me-1"></i>Failed</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Options.BasePath/periodic"><i class="bi bi-arrow-repeat me-1"></i>Periodic</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container-fluid py-4">
        @RenderBody()
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>

    <!-- HTMX -->
    <script src="https://unpkg.com/htmx.org@1.9.10"></script>

    <!-- Custom JS -->
    <script src="~/_content/XactJobs.UI/js/xactjobs.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
